<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PillInfoActivity">


    <ImageView
        android:id="@+id/drugImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/drugName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제품명 : " />

    <TextView
        android:id="@+id/drugIngredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="성분 / 함량 :" />

    <TextView
        android:id="@+id/additives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="첨가제 : " />

    <TextView
        android:id="@+id/professional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전문 / 일반 : " />

    <TextView
        android:id="@+id/drugCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제조 / 수입 :" />

    <TextView
        android:id="@+id/drugForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제형 : " />

    <TextView
        android:id="@+id/howEat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="투여경로 : " />

    <TextView
        android:id="@+id/appearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="성상 : " />

    <TextView
        android:id="@+id/classification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="식약처 분류 : " />

    <TextView
        android:id="@+id/storeMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저장방법 : " />

    <TextView
        android:id="@+id/efficacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="효능·효과 : " />

    <TextView
        android:id="@+id/drugUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="용법·용량 : " />

    <TextView
        android:id="@+id/medicationInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="복약정보 : " />

    <TextView
        android:id="@+id/precautions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용상의 주의사항" />
</LinearLayout>